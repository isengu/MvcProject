@model MvcProject.Models.Appointment

@{
    ViewData["Title"] = "Detaylar";
}

<h1>Detaylar</h1>

<div>
    <h4>Randevu</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Tarih
        </dt>
        <dd class="col-sm-10">
            @Model.Date
        </dd>
        <dt class="col-sm-2">
            Saat
        </dt>
        <dd class="col-sm-10">
            @Model.AppointmentTime
        </dd>
        <dt class="col-sm-2">
            Ana Bilim Dalı
        </dt>
        <dd class="col-sm-10">
            @Model.Doctor.Policlinic.Major.Name
        </dd>
        <dt class="col-sm-2">
            Poliklinik
        </dt>
        <dd class="col-sm-10">
            @Model.Doctor.Policlinic.Name
        </dd>
        <dt class="col-sm-2">
            Doktor
        </dt>
        <dd class="col-sm-10">
            @Model.Doctor.Name
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index">Listeye Geri Dön</a>
</div>
